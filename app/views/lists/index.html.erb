<div class="banner">
  <div class="container">
    <h1 class="text-center">Save any kind of movie</h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to "+ Add a list", new_list_path, class:"btn btn-success mt-3" %>
  </div>
  <h2 class="m-4">My lists</h2>
  <div class="cards">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <p><%= link_to list.name, list_path(list) %></p>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('random photo')">
          <p><%= link_to list.name, list_path(list) %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
