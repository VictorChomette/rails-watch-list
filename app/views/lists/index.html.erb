<div class="banner">
  <div class="container">
    <h1 class="text-center">Save any kind of movie</h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to "+ Add a list", new_list_path, class:"btn btn-success mt-3" %>
  </div>
  <h2 class="m-4">My lists</h2>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <p><%= link_to list.name, list_path(list) %></p>
      </div>
    <% end %>
  </div>
</div>
